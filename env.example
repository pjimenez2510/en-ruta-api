# Configuración de JWT
JWT_EXPIRATION=360d
JWT_SECRET=tu-secreto-jwt-super-seguro-y-unico

# Configuración de Base de Datos
DATABASE_URL="postgresql://usuario:password@host:puerto/database?schema=public"
DIRECT_URL="postgresql://usuario:password@host:puerto/database?schema=public"

# Configuración de PostgreSQL (para desarrollo local)
POSTGRES_USER_DEV=postgres
POSTGRES_PASSWORD_DEV=root

# Configuración de Prisma
PRISMA_LOG_LEVEL=info

# Configuración de la Aplicación
NODE_ENV=production
DEBUG=false
PORT=3000

# Configuración de Email
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER="tu-email@gmail.com"
EMAIL_PASSWORD="tu-password-de-aplicacion"
EMAIL_FROM_NAME="EnRuta - Sistema de Transporte"
EMAIL_FROM_ADDRESS="tu-email@gmail.com"

# Configuración de Redis (opcional)
REDIS_URL="redis://localhost:6379"

# Configuración de Logs
LOG_LEVEL=info
LOG_FORMAT=json

# Configuración de Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Configuración de CORS
CORS_ORIGIN="*"
CORS_CREDENTIALS=true

# Configuración de Swagger
SWAGGER_TITLE="EnRuta API"
SWAGGER_DESCRIPTION="API para sistema de transporte EnRuta"
SWAGGER_VERSION="1.0"
SWAGGER_TAG="en-ruta" 